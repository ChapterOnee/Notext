header = getHeader();

placement = cast(AmbrosiaUI.Widgets.Placements.HorizontalPlacement,header);

button = new AmbrosiaUI.Widgets.Button("Dissimulo", "small", 0, 0, 4);

placement.add(
    cast(AmbrosiaUI.Widgets.Widget, button),
    new AmbrosiaUI.Utility.UnitValue(0,"fit")
);

function buttonPressed(){
    prompt("HelloWorld?", buttonPressed);
}

addMouseClickedListener(button, buttonPressed);
